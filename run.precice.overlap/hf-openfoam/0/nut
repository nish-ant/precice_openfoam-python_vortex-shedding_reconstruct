FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    outlet
    {
        // type            calculated;
        // value           uniform 0;

        type            fixedValue;
        value           $internalField;

        // type            fixedGradient;
        // value           $internalField;
    }
    top
    {
        // type            symmetryPlane;
        type            fixedValue;
        value           $internalField;
    }
    bottom
    {
        type            nutUSpaldingWallFunction;
        value           uniform 0;
    }
    inlet
    {
        // type            calculated;
        // value           uniform 0;
        type            fixedValue;
        value           $internalField;
    }
    cylinderWalls
    {
        type            nutUSpaldingWallFunction;
        Cmu             0.09;
        kappa           0.41;
        E               9.8;
        value           uniform 0;
    }
    frontAndBack
    {
        type            empty;
    }
}

