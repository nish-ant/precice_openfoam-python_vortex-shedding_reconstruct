FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system/sampling";
    object      internalCloud;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

internalField
{
    type                 sets;
    functionObjectLibs   ("libsampling.so");
    enabled              true;
    interpolationScheme  cellPoint;
    setFormat            raw;
    writeControl         adjustableRunTime; // timeStep; // runTime;
    writeInterval        0.001; // 100; // 0.1;

    // timeStart       150;
    // timeEnd         199.99;

    // fields ( p U k omega );
    fields ( p U k omega nut );

    sets
    (
      cloud
      {
         type         points;
         axis         xyz;
         points       (
             #include "pointCloud.dat"
             );
         ordered      true;
      }
    );
} 

